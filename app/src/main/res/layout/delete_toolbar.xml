<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:background="@color/everyday_green"

        android:gravity="end"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_toolbar_edit"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center"

            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="3dp"

            android:background="@drawable/shape_round_btn_transparent"
            android:src="@drawable/ic_btn_edit"

            app:tint="@color/white"
            android:contentDescription="@string/todo"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btn_toolbar_delete"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:layout_toEndOf="@id/btn_toolbar_edit"

            android:layout_marginStart="10dp"
            android:paddingHorizontal="3dp"

            android:background="@drawable/shape_round_btn_transparent"
            android:src="@drawable/ic_btn_delete"

            app:tint="@color/white"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/btn_toolbar_update"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:layout_toEndOf="@id/btn_toolbar_edit"

            android:layout_marginStart="10dp"
            android:paddingHorizontal="3dp"

            android:background="@drawable/shape_round_btn_transparent"
            android:src="@drawable/ic_btn_check"

            app:tint="@color/white"
            android:visibility="invisible"
            android:contentDescription="@string/todo" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>